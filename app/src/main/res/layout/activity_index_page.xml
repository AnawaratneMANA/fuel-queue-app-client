<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".IndexPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dev Index Page"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dev Navigation"
        android:textColor="@color/purple_500"
        android:textSize="23sp"
        android:textStyle="italic"
        android:paddingStart="10dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/stationDetailsButtonDev"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Station Details Page" />

    <Button
        android:id="@+id/stationListButtonDev"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Station List" />

</LinearLayout>